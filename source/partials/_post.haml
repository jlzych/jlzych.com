%article
  %time{ datetime: article.date.strftime('%Y-%m-%d') }
    %i Posted on
    = article.date.strftime('%b %e, %Y')
  %h1= link_to article.title, article

  ~ article.body

  %p.follow-me
    Thoughts? Reply
    =link_to "@jlzych", "http://twitter.com/jlzych"

  %footer.tags
    Tags:
    - article.tags.each do |tag|
      -# = link_to tag, tag_path(tag), { class: "tag", title: "Articles tagged #{tag}" }
      %span.tag= tag
